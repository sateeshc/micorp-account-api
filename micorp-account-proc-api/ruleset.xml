<ruleset>
    <rule name="FlowNameShouldMatchConvention"
      language="xml"
      message="Flows names should match a naming convention"
      class="net.sourceforge.pmd.lang.rule.XPathRule" >
        <description>
        Flow names should match a naming convention
    </description>
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
//count(//mule:mule/mule:flow)=0 or matches(//mule:mule/mule:flow/@name, '^[a-z:\\{}]+(-[a-z]+)*$')
]]>
                </value>
            </property>
        </properties>
    </rule>
</ruleset>
